    <div className="relative z-10">
      <div className="w-12 h-12 bg-neutral-800 rounded-lg flex items-center justify-center mb-6 group-hover:bg-red-900/20 transition-colors">
        <Icon className="w-6 h-6 text-white group-hover:text-red-500 transition-colors" />
      </div>
      <h3 className="text-xl font-bold text-white mb-3">{title}</h3>
      <p className="text-neutral-400 leading-relaxed">{description}</p>
